{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
    <div class="form_container">
        <h2 class="text-center mb-4"> Edit User</h2>
        <div class="row">
            <div class="col">
                {{ form_start(form) }}
                <div class="row mt-4">
                    <div class="col-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        {{ form_row(form.birthdate) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col text-center">
                        <a class="btn btn-warning" href="{{ path('homepage') }}">Return </a>
                    </div>
                    <div class="col text-center">
                        {{ form_widget(form.save, { 'label': 'Edit user' }) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}